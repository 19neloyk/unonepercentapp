function wordFrequency(temple, this.desc)
var temples = 'temples'
function wordFrequency(temples, this.desc)
var islamic = 'islamic'
function wordFrequency(islamic, this.desc)
var hindu = 'hindu'
function wordFrequency(hindu, this.desc)
