class application{
  constructor(costInDollars, region, fundingAllocation, desc){
    this.costInDollars = costInDollars.toLowerCase();
    this.region = region.toLowerCase();
    this.fundingAllocation = fundingAllocation.toLowerCase();
    this.desc = desc.toLowerCase();
  }

  //Checking if region is okay
  this.isRegionOkay:boolean;
  if(this.region =='India'){
    this.isRegionOkay = false;
  } else if(this.region =='Kenya'){
    this.isRegionOkay = false;
  } else if(this.region =='Sierra Leone'){
    this.isRegionOkay = false;
  } else if(this.region =='Uganda'){
    this.isRegionOkay = false;
  } else{
    this.isRegionOkay = true;
  }


  //Checking if cost is okay
  this.isCostOkay: boolean;
  if (this.costInDollars> 6000){
    this.isCostOkay = false;
  } else{
    this.isCostOkay = true;
  }


  //Defines the Red Flag Meter--> the basis of the algorithm
 this.redFlagMeter = 0;
  //Defines the function we will use to filter appropriate words.

  function wordFrequency(chosenWordFull, writingPieceFull){
    var wordCount= 0;
    var chosenWord = chosenWordFull.split("");
    var writingPiece = writingPieceFull.split("");
    var wrongNumber = 0;
    //Actual looping through document
    for (x = 0; x < writingPieceFull.length; x++){
       for(z = 0; z < chosenWordFull.length; z++){
           if (chosenWord[z] != writingPiece[x+z]){
            wrongNumber = 1; 
           }
       }
       if (wrongNumber === 0){
           wordCount++;
           wrongNumber = 0;
       }else{
           wrongNumber = 0;
       
       }
    }      
    //Now we are going to add the Word Count(for each loop) into the Red Flag Meter.
    return wordCount;
    this.redFlagMeter += wordCount;
    
}


  //Checks if there are salaries(filter words: salary, salaries, wage, wages, ~income, ~incomes)
var salary = 'salary';
function wordFrequency(salary, this.fundingAllocation);
var salaries = 'salaries';
function wordFrequency(salaries, this.fundingAllocation);
var wage = 'wage';
function wordFrequency(wage, this.fundingAllocation);
var wages = 'wages';
function wordFrequency(wages, this.fundingAllocation);
var income = 'income';
function wordFrequency(income, this.fundingAllocation);
var incomes = 'incomes';
function wordFrequency(incomes, this.fundingAllocation);

  //Checks if religion is involved(filter words:church, churches, mosque, mosques, temple, temples, Islamic, Hindu, Christian, ~[maybe names of prophets])
var church = 'church'
function wordFrequency(church, this.desc)
